<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.joe.donlate.view_model.meetings.MeetingsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/save"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="@{viewModel::onCreateMeetingClick}"/>

        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 이름"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/save"/>

        <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="약속의 이름을 입력해주세요."
                android:inputType="text"
                android:text="@{viewModel.title}"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="약속 날짜"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/editTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"/>

        <EditText
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2019"
                android:text="@{viewModel.year}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/text0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:textSize="25sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/year"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/year"
                app:layout_constraintTop_toTopOf="@+id/year"
                android:id="@+id/textView6"/>

        <EditText
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="02"
                android:text="@{viewModel.month}"
                android:textColor="#80606060"
                android:textSize="30sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintBottom_toBottomOf="@+id/day"
                app:layout_constraintTop_toTopOf="@+id/day"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="25sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/month"
                app:layout_constraintBottom_toBottomOf="@+id/month"
                app:layout_constraintTop_toTopOf="@+id/month"
                android:layout_marginStart="8dp"
                android:id="@+id/textView7"/>

        <EditText
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="01"
                android:text="@{viewModel.day}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintBottom_toBottomOf="@+id/year"
                app:layout_constraintTop_toTopOf="@+id/year"
                android:layout_marginStart="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="25sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/day"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/day"
                app:layout_constraintTop_toTopOf="@+id/day"/>

        <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 시간"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/year"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <EditText
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10"
                android:text="@{viewModel.hour}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80606060"
                android:textSize="30sp"
                android:text=":"
                app:layout_constraintStart_toEndOf="@+id/hour"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/hour"
                app:layout_constraintBottom_toBottomOf="@+id/hour"
                android:id="@+id/textView5"/>

        <EditText
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10"
                android:text="@{viewModel.min}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                android:layout_marginStart="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80606060"
                android:textSize="30sp"
                android:text="am"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/min"
                app:layout_constraintBottom_toBottomOf="@+id/min"
                app:layout_constraintTop_toTopOf="@+id/min"
                android:id="@+id/textView3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여 인원"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/text2"
                app:layout_constraintBottom_toBottomOf="@+id/text2"/>

        <EditText
                android:id="@+id/maxParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2"
                android:text="@{viewModel.maxParticipants}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/min"
                app:layout_constraintTop_toTopOf="@+id/min"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginStart="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="명"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/maxParticipants"
                app:layout_constraintBottom_toBottomOf="@+id/min"
                app:layout_constraintTop_toTopOf="@+id/min"/>

        <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지각비"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/hour"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <EditText
                android:id="@+id/penaltyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1"
                android:text="@{viewModel.penaltyTime}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분당"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@id/penaltyTime"
                app:layout_constraintTop_toTopOf="@id/penaltyTime"
                app:layout_constraintBottom_toBottomOf="@id/penaltyTime"/>

        <EditText
                android:id="@+id/penaltyFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1,000"
                android:text="@{viewModel.penaltyFee}"
                android:textColor="#80606060"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@id/text4"
                app:layout_constraintTop_toTopOf="@id/text4"
                app:layout_constraintBottom_toBottomOf="@id/text4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="@id/penaltyFee"
                app:layout_constraintStart_toEndOf="@id/penaltyFee"
                app:layout_constraintBottom_toBottomOf="@id/penaltyFee"/>

        <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 장소"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/penaltyTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <EditText
                android:id="@+id/searchPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="@{null}"
                android:onClick="@{viewModel::onStartSearchPlaceClick}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>