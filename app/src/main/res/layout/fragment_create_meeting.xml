<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewModel"
                type="com.joe.donlate.view_model.meetings.MeetingsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/save"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="@{viewModel::onCreateMeetingClick}"/>

        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 이름"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/save"/>

        <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="약속의 이름을 입력해주세요."
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 시간"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/editTitle"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 : 10 am"
                android:textColor="#80606060"
                android:textSize="45sp"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지각비"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/penaltyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#80606060"
                android:textSize="45sp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분당"
                android:textColor="#000000"
                android:textSize="45sp"
                app:layout_constraintStart_toEndOf="@id/penaltyTime"
                app:layout_constraintTop_toTopOf="@id/penaltyTime"
                app:layout_constraintBottom_toBottomOf="@id/penaltyTime"/>

        <TextView
                android:id="@+id/penaltyFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000"
                android:textColor="#80606060"
                android:textSize="45sp"
                app:layout_constraintStart_toEndOf="@id/text4"
                app:layout_constraintTop_toTopOf="@id/text4"
                app:layout_constraintBottom_toBottomOf="@id/text4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#000000"
                android:textSize="45sp"
                app:layout_constraintTop_toTopOf="@id/penaltyFee"
                app:layout_constraintStart_toEndOf="@id/penaltyFee"
                app:layout_constraintBottom_toBottomOf="@id/penaltyFee"/>

        <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약속 장소"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/penaltyTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <EditText
                android:id="@+id/searchPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="@{viewModel::onStartSearchPlaceClick}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>